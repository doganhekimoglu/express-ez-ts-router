{
  "name": "express-ez-ts-router",
  "version": "1.0.8",
  "description": "Easy to use Typescript decorators for creating Express.js routes",
  "main": "./dist/cjs/index.js",
  "module": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doganhekimoglu/express-ez-ts-router.git"
  },
  "scripts": {
